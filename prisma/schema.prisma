generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
  // directUrl         = env("NEXT_PUBLIC_DIRECT_URL")
}

model Documents {
  id          String   @id @default(cuid())
  name       String?
  url       String
  created_at   DateTime @default(now())
}

model ChatHistory {
  id          String   @id @default(cuid())
  childId       String
  title       String?
  messages       Json
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
}